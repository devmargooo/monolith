{
  "name": "@monolith/xdonate",
  "version": "0.2.0",
  "private": true,
  "nx": {
    "targets": {
      "build": {
        "executor": "nx:run-commands",
        "options": {
          "command": "webpack-cli build",
          "args": [
            "--node-env=production"
          ]
        },
        "configurations": {
          "development": {
            "args": [
              "--node-env=development"
            ]
          }
        }
      },
      "serve": {
        "continuous": true,
        "executor": "@nx/js:node",
        "defaultConfiguration": "development",
        "dependsOn": [
          "build"
        ],
        "options": {
          "buildTarget": "@monolith/xdonate:build",
          "runBuildTargetDependencies": false
        },
        "configurations": {
          "development": {
            "buildTarget": "@monolith/xdonate:build:development"
          },
          "production": {
            "buildTarget": "@monolith/xdonate:build:production"
          }
        }
      },
      "test": {
        "options": {
          "passWithNoTests": true
        }
      },
      "version": {
        "executor": "@jscutlery/semver:version",
        "options": {
          "baseBranch": "main",
          "commitMessageFormat": "chore(${projectName}): release version ${version}",
          "trackDeps": true,
          "push": false
        }
      },
      "sonar": {
        "executor": "nx:run-commands",
        "options": {
          "command": "sonar-scanner -D project.settings=sonar-project.properties",
          "cwd": "."
        }
      }
    }
  }
}
